//- Все примеси в этом файле должны начинаться c имени блока (fighter-card)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт
//- в сборку

mixin fighter-card(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +fighter-card('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' fighter-card--' + modsList[i].trim();
      }
    }

  .fighter-card.p-card(class=allMods)&attributes(attributes)
    .p-card__miniature
        span.p-card__miniature-id= data.id
        img.p-card__miniature-img(src= src.img + data.photo, alt=data.name)
    .p-card__info
      .p-card__row
        h3.p-card__title= data.name
        .p-card__types
          each type in data.types
            svg.p-card__type: use(href= src.icon + 'type-' + type)
      .p-card__features
        each feat in data.features
          .p-card__feature
            span.p-card__feature-container.p-card__feature-icon
              svg.p-card__feature-icon-svg: use(href= src.icon + 'category-' + feat.name)
            span.p-card__feature-container.p-card__feature-value= feat.value
        .p-card__feature
          span.p-card__feature-container.p-card__feature-icon
            svg.p-card__feature-icon-svg: use(href= src.icon + 'category-weakness')
          span.p-card__feature-container.p-card__feature-value
            each weakness in data.weakness
              svg.p-card__feature-icon-svg: use(href= src.icon + 'type-' + weakness)
        .p-card__feature
          span.p-card__feature-container.p-card__feature-icon
            svg.p-card__feature-icon-svg: use(href= src.icon + 'category-strength')
          span.p-card__feature-container.p-card__feature-value= data.strength
